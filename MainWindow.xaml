<Window x:Class="NoblegardenLauncherSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="Лаунчер Noblegarden" Height="600" Width="900" ResizeMode="NoResize">
    <Border BorderBrush="#FF062131" BorderThickness="4, 0, 4, 4">
        <Grid Width="900" Height="600" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="860"/>
                <ColumnDefinition Width="16" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="55"/>
                <RowDefinition Height="545"/>
            </Grid.RowDefinitions>
            <Image Name ="BgImage" Stretch="Fill" Source="bg.jpg" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Height="700" Grid.RowSpan="2" VerticalAlignment="Top" Width="1400">
                <Image.Triggers>
                    <EventTrigger RoutedEvent="Image.Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <ThicknessAnimationUsingKeyFrames 
                                    Storyboard.TargetName="BgImage" 
                                    Storyboard.TargetProperty="Margin"
                                    RepeatBehavior="Forever"
                                    BeginTime="00:00:00"
                                    AutoReverse="True"
                                >
                                    <SplineThicknessKeyFrame KeyTime="00:00:00" Value="0,0,0,0" />
                                    <SplineThicknessKeyFrame KeyTime="00:00:16" Value="-250,-50,0,0" />
                                    <SplineThicknessKeyFrame KeyTime="00:00:24" Value="-150,-80,0,0" />
                                    <SplineThicknessKeyFrame KeyTime="00:00:30" Value="-50,-50,0,0" />
                                    <SplineThicknessKeyFrame KeyTime="00:00:36" Value="0,0,0,0" />
                                </ThicknessAnimationUsingKeyFrames>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Image.Triggers>
            </Image>
            <Rectangle Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="3">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#00062131" Offset="0"/>
                        <GradientStop Color="#FF062131" Offset="0.863"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle Fill="#FF062131" Grid.ColumnSpan="3">
                <Rectangle.Effect>
                    <DropShadowEffect/>
                </Rectangle.Effect>
            </Rectangle>
            <Image Name = "Logo" Source="logo-image.png" Grid.Row="0" Grid.Column="1" Width="48" HorizontalAlignment="Left" />
            <Image Name = "CloseIcon" Source="close.png" Grid.Row="0" Grid.Column="1" Width="24" HorizontalAlignment="Right" Height="24">
                <Image.Style>
                    <Style TargetType="{x:Type Image}">
                        <Setter Property="Opacity" Value="0.6"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="NOBLEGARDEN" FontSize="24" Foreground="#D8FAFAFA" Margin="56,2.25,577,20.75" FontFamily="Segoe UI Black" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="Ролевой сервер World of Warcraft" FontFamily="Bahnschrift Light" FontSize="14" Foreground="#D8FAFAFA" Margin="56,31.25,216.73,4.75"/>
            <Rectangle Fill="#59050505" Grid.Row="0" Grid.Column="1" RadiusY="16" RadiusX="16" Height="32" Margin="308,-18,176,41" />
        </Grid>
    </Border>
</Window>
